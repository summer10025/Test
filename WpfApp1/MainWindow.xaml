<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="350" ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Display Screen -->
        <Border Grid.Row="0" Grid.ColumnSpan="4" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10" Background="#F0F0F0">
            <TextBlock x:Name="Display" Text="0" FontSize="32" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="10"/>
        </Border>

        <!-- Row 1 -->
        <Button Content="C" Grid.Row="1" Grid.Column="0" Margin="2" FontSize="20" Click="Button_Click_Clear" Background="#FFDDDD"/>
        <Button Content="CE" Grid.Row="1" Grid.Column="1" Margin="2" FontSize="20" Click="Button_Click_CE"/>
        <Button Content="DEL" Grid.Row="1" Grid.Column="2" Margin="2" FontSize="20" Click="Button_Click_Delete"/>
        <Button Content="/" Grid.Row="1" Grid.Column="3" Margin="2" FontSize="20" Click="Button_Click_Operator"/>

        <!-- Row 2 -->
        <Button Content="7" Grid.Row="2" Grid.Column="0" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="8" Grid.Row="2" Grid.Column="1" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="9" Grid.Row="2" Grid.Column="2" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="*" Grid.Row="2" Grid.Column="3" Margin="2" FontSize="20" Click="Button_Click_Operator"/>

        <!-- Row 3 -->
        <Button Content="4" Grid.Row="3" Grid.Column="0" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="5" Grid.Row="3" Grid.Column="1" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="6" Grid.Row="3" Grid.Column="2" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="-" Grid.Row="3" Grid.Column="3" Margin="2" FontSize="20" Click="Button_Click_Operator"/>

        <!-- Row 4 -->
        <Button Content="1" Grid.Row="4" Grid.Column="0" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="2" Grid.Row="4" Grid.Column="1" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="3" Grid.Row="4" Grid.Column="2" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="+" Grid.Row="4" Grid.Column="3" Margin="2" FontSize="20" Click="Button_Click_Operator"/>

        <!-- Row 5 -->
        <Button Content="0" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="2" FontSize="20" Click="Button_Click_Number"/>
        <Button Content="." Grid.Row="5" Grid.Column="2" Margin="2" FontSize="20" Click="Button_Click_Dot"/>
        <Button Content="=" Grid.Row="5" Grid.Column="3" Margin="2" FontSize="20" Click="Button_Click_Equals" Background="#DDFFDD"/>
    </Grid>
</Window>
